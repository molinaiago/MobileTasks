<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuração Inicial da Viagem"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destino"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Partida"
            android:layout_marginTop="16dp"/>

        <DatePicker
            android:id="@+id/datePickerDeparture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Retorno"
            android:layout_marginTop="16dp"/>

        <DatePicker
            android:id="@+id/datePickerReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferências"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/cbAdventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aventura"/>

        <CheckBox
            android:id="@+id/cbCulture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultura"/>

        <CheckBox
            android:id="@+id/cbBeach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Praia"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:id="@+id/btnConfirm"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>